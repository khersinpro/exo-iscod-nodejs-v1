<%- include('../layouts/header.ejs') %>
<main class="flex-grow-1">
    <section class="container-fluid">
        <div class="container">
            <% if (errors) { %>
                <ul class="list-group mt-3">
                    <% errors.forEach(error => { %>
                        <li class="list-group-item text-danger fw-bold" style="font-size: 12px;"><%= error.msg %></li>
                    <% }) %>
                </ul>
            <% } %>
            <form action="/" method="POST" class="mt-3">
                <div class="form-group">
                    <label for="title-form">Titre</label>
                    <input class="form-control" type="text" name="title" id="title-form">
                </div>
                <div class="form-group">
                    <label for="content-form">Message</label>
                    <input class="form-control" type="text" name="content" id="content-form">
                </div>
                <div class="form-group">
                    <label for="author-form">Pseudo</label>
                    <input class="form-control" type="text" name="author" id="author-form">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Envoyer</button>
            </form>
        </div>
        <div class="container mt-3">
            <% if (messages) { %>
                <ul class="list-group">
                <% messages.forEach(message => { %>
                    <li class="list-group-item">
                        <span>Titre : <%= message.title %></span><br>
                        <span>Message : <%= message.content %></span><br>
                        <span>Auteur : <%= message.author %></span>
                    </li>
                <% }) %>
                </ul>
            <% } else { %>
                <p>Aucun messages Ã  afficher</p>
            <% } %>
        </div>
    </section>
</main>
<%- include('../layouts/footer.ejs') %>